<?xml version="1.0" encoding="utf-8" ?>
<Config>
  <Controllers>
    <Controller>
      <Url-pattern>/viewdirectory</Url-pattern>
      <Controller-class>FileManagerApp.TreeViewController</Controller-class>
    </Controller>
    <Controller>
      <Url-pattern>/download</Url-pattern>
      <Controller-class>FileManagerApp.DownloadFileController</Controller-class>
    </Controller>
    <Controller>
      <Url-pattern>/</Url-pattern>
      <Controller-class>FileManagerApp.LoginController</Controller-class>
    </Controller>
    <Controller>
      <Url-pattern>/rename</Url-pattern>
      <Controller-class>FileManagerApp.RenameController</Controller-class>
    </Controller>
    <Controller>
      <Url-pattern>/delete</Url-pattern>
      <Controller-class>FileManagerApp.DeleteController</Controller-class>
    </Controller>
    <Controller>
      <Url-pattern>/admin</Url-pattern>
      <Controller-class>FileManagerApp.AdminController</Controller-class>
    </Controller>
  </Controllers>
  <ResourceResolver>
    <Resolver-class>HttpWebServer.application.ResourceResolver</Resolver-class>
    <Path>/resources/</Path>
  </ResourceResolver>
</Config>